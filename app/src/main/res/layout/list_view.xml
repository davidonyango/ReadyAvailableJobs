<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_getname1_id"
            android:text="Name :"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp">

        </TextView>

        <TextView
            android:id="@+id/tv_getname_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#111111"
            android:textSize="14dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="50dp">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/textviews_borders"
        android:orientation="horizontal">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_country_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Country :"
            android:textColor="#000000"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/tv_getcountry1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="25dp"
            android:text="Country"
            android:textColor="#111111"
            android:textSize="14dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/textviews_borders"
        android:orientation="horizontal">
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_getlocation2_id"
            android:text="Location/city/town"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp">

        </TextView>


        <TextView
            android:id="@+id/tv_getlocation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location/City/Town"
            android:textColor="#111111"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/textviews_borders"
        android:orientation="horizontal">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">


        <Button
            android:id="@+id/btcall"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/ic_call_24dp"
            android:layout_marginTop="20dp">

        </Button>

        <TextView
            android:id="@+id/tv_getphonenumber2_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Phone number"
            android:textColor="#000000"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/tv_getphonenumber_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:textColor="#111111"
            android:textSize="14dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="23dp"
            >

        </TextView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/textviews_borders"
        android:orientation="horizontal">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_getjobdescription2_id"
        android:text="The type of job to be done"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp" >

    </TextView>

    <TextView
        android:id="@+id/tv_getjobdescription_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The type of job to be done"
        android:textColor="#111111"
        android:textSize="14dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        >

    </TextView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/textviews_borders"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_getdescribethetermsofemployment2"
            android:text="The duration of employment"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp" >

        </TextView>

        <TextView
            android:id="@+id/tv_getdescribethetermsofemployment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The duration of employment"
            android:textColor="#111111"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/textviews_borders"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_getskillsandrequrements2_id"
            android:text="Requirements/skills neede"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp" >

        </TextView>

        <TextView
            android:id="@+id/tv_getskillsandrequrements_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Requirements/skills neede"
            android:textColor="#111111"
            android:textSize="14dp">

        </TextView>

    </LinearLayout>

</LinearLayout>

   